<div class="container mt-5">
  <h2>Edit Flat</h2>
  <%= form_with model: @flat, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name, "Flat Name" %>
    <%= form.text_field :name, class: "form-control", placeholder: "#{@flat.name}" %>
  </div>

  <div class="form-group">
    <%= form.label :address, "Address" %>
    <%= form.text_field :address, class: "form-control", placeholder: "#{@flat.address}" %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, class: "form-control", placeholder: "#{@flat.description}", rows: 5 %>
  </div>

  <div class="form-group">
    <%= form.label :price_per_night, "Price per Night (â‚¬)" %>
    <%= form.number_field :price_per_night, class: "form-control", placeholder: "#{@flat.price_per_night}" %>
  </div>

  <div class="form-group">
    <%= form.label :number_of_guests, "Number of Guests" %>
    <%= form.number_field :number_of_guests, class: "form-control", placeholder: "#{@flat.number_of_guests}" %>
  </div>

  <%= form.submit "Save Flat", class: "btn btn-primary" %>
   <%= link_to "Cancel", flats_path, class: "btn btn-danger" %>
<% end %>
</div>
