<div class="container mt-5">
  <h2><%= @flat.name %></h2>
  <p class="text-muted"><%= @flat.address %></p>

  <% if @flat.image.present? %>
    <div class="mb-4">
      <img src="<%= @flat.image %>" class="img-fluid" alt="<%= @flat.name %>" />
    </div>
  <% end %>

  <div class="card mb-4 shadow-sm">
    <div class="card-body">
      <h5 class="card-title">Description</h5>
      <p class="card-text"><%= @flat.description %></p>

      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to 'Edit Flat', edit_flat_path(@flat), class: 'btn btn-secondary' %>
          <%= link_to 'Delete', flat_path(@flat),  data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </div>
      </div>
      <small class="text-muted">
        <i class="fas fa-users"></i> <%= @flat.number_of_guests %>
        &nbsp; <i class="fas fa-euro-sign"></i> <%= number_to_currency(@flat.price_per_night, unit: 'â‚¬') %>
      </small>
    </div>
  </div>

  <%= link_to 'Back to Flats', flats_path, class: 'btn btn-primary' %>
</div>
